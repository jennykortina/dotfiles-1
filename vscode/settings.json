{
  "diffEditor.renderIndicators": true,
  // "docker-linter.rubocop.enable": true,
  "editor.formatOnSave": true,
  "[ruby]": {
    "editor.formatOnSave": true
  },
  "editor.minimap.enabled": false,
  "editor.quickSuggestionsDelay": 1,
  "files.autoSave": "off",
  "eslint.autoFixOnSave": true,
  // "eslint.validate": ["javascript", "javascriptreact", "typescript"],
  // "gitlens.annotations.file.gutter.format": "${author} - ${message|40?} ${ago|14-}",
  // "gitlens.blame.line.enabled": false,
  // "prettier.eslintIntegration": true,
  "prettier.jsxBracketSameLine": true,
  "prettier.parser": "flow",
  "prettier.printWidth": 100,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "ruby.linter.run": "onSave",
  // "javascript.format.enable": true,
  "runInTerminal.commands": [
    {
      "cmd": "./bin/rspec ${relativeFile}:${line}",
      "match": "_spec\\.rb$",
      "name": "l"
    },
    {
      "cmd": "./bin/rspec ${relativeFile}",
      "match": "_spec\\.rb$",
      "name": "b"
    },
    {
      "cmd": "./bin/rspec",
      "match": "_spec\\.rb$",
      "name": "s"
    }
  ],
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  // "vim.disableAnnoyingNeovimMessage": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-p>": false
  },
  "vim.hlsearch": true,
  "vim.leader": ",",
  // This does not seem to work:
  // "vim.insertModeKeyBindings": [
  //   {
  //     "before": ["<C-p>"],
  //     "after": [],
  //     "commands": [{ "command": "editor.action.triggerSuggest", "args": [] }]
  //   }
  // ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "after": [],
      "before": ["g", "l"],
      "commands": [
        {
          "args": [],
          "command": "editor.action.openLink"
        }
      ]
    },
    {
      "after": [],
      "before": ["<leader>", "e"],
      "commands": [
        {
          "args": [],
          "command": "editor.action.marker.next"
        }
      ]
    },
    {
      "after": [],
      "before": ["<leader>", "r", "a"],
      "commands": [
        {
          "command": "runInTerminal.runLast"
        }
      ]
    },
    {
      "after": [],
      "before": ["<leader>", "r", "l"],
      "commands": [
        {
          "args": {
            "name": "l"
          },
          "command": "runInTerminal.run"
        }
      ]
    },
    {
      "after": [],
      "before": ["<leader>", "r", "b"],
      "commands": [
        {
          "args": {
            "name": "b"
          },
          "command": "runInTerminal.run"
        }
      ]
    },
    {
      "after": [],
      "before": ["<leader>", "r", "s"],
      "commands": [
        {
          "args": {
            "name": "s"
          },
          "command": "runInTerminal.run"
        }
      ]
    },
    {
      "after": [],
      "before": ["<leader>", "a"],
      "commands": [
        {
          "command": "editor.action.marker.nextInFiles"
        }
      ]
    },
    {}
  ],
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {
    "editor.lineHighlightBorder": "#444444",
    "editorCursor.foreground": "#f44271",
    "tab.activeForeground": "#ffffff",
    "tab.unfocusedActiveForeground": "#555555",
    "terminalCursor.foreground": "#f44271"
  },
  "workbench.colorTheme": "Tomorrow Night",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,
  "zenMode.hideStatusBar": false,
  "python.pythonPath": "~/.pyenv/shims/python"
}
