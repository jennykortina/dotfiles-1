// Place your key bindings in this file to overwrite the defaults
[

    { "key": "ctrl+a ctrl+o", "command": "workbench.action.toggleMaximizedPanel" },
    // Prolly need to move all these to the vim keybindings in settings.json
    // {"key": "ctrl+j", "command": "workbench.action.focusNextGroup"},
    // {"key": "ctrl+k", "command": "workbench.action.focusPreviousGroup"},
    {"key": "ctrl+l", "command": "workbench.action.focusNextGroup"},
    {"key": "ctrl+h", "command": "workbench.action.focusPreviousGroup"},

    // Prolly need to move all these to the vim keybindings in settings.json
    // Move focus left to explorer
    { "key": "ctrl+a ctrl+h", "command": "workbench.view.explorer", "when": "!explorerViewletFocus"},
    // Move focus up to editor:
    { "key": "ctrl+k", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"}, // ctrl+a prefix doesn't work here
    // Move focus right to editor:
    { "key": "ctrl+a ctrl+l", "command": "workbench.action.focusActiveEditorGroup", "when": "explorerViewletFocus"},
    // Move focus down to the terminal:
    { "key": "ctrl+a ctrl+j", "command": "workbench.action.terminal.focus", "when": "editorFocus"},

//    { "key": "ctrl+j",          "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus" },
//    { "key": "ctrl+k",          "command": "workbench.action.terminal.focus", "when": "!terminalFocus" }

    {}
]