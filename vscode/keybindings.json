    {"key": "ctrl+l", "command": "workbench.action.focusNextGroup"},
    {"key": "ctrl+k", "command": "workbench.action.focusPreviousGroup"},
    {"key": "ctrl+h", "command": "workbench.action.focusPreviousGroup"},

    // Prolly need to move all these to the vim keybindings in settings.json
    // Move focus from terminal to editor:
    { "key": "ctrl+shift+k", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"},
    { "key": "ctrl+shift+k", "command": "workbench.action.terminal.focus", "when": "!terminalFocus"},
    // Move focus down to the terminal:
    { "key": "ctrl+shift+j", "command": "workbench.action.terminal.focus", "when": "!terminalFocus"},
    { "key": "ctrl+shift+j", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"},

    {"zenMode.hideStatusBar": false},
    

