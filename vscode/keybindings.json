// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "ctrl+p",
        "command": "editor.action.triggerSuggest",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+a ctrl+o",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    // Move focus in editor to right
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusNextGroup",
        "when": "editorFocus"
    },
    // Move focus in editor to left
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusPreviousGroup",
        "when": "editorFocus"
    },
    // Move focus from editor left to explorer
    {
        "key": "ctrl+shift+h",
        "command": "workbench.view.explorer",
        "when": "!explorerViewletFocus"
    },
    // Move focus from explore right to editor:
    {
        "key": "ctrl+shift+l",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "explorerViewletFocus || filesExplorerFocus"
    },
    // Move focus down to the terminal:
    {
        "key": "ctrl+shift+j",
        "command": "workbench.action.terminal.focus",
        "when": "editorFocus"
    },
    // Move focus up to editor:
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    // Exec bash script with runInTerminal
    {
        "key": "ctrl+e",
        "command": "runInTerminal.run",
        "args": {
            "cmd": "/usr/bin/env bash ${relativeFile}",
            "match": ".*"
        },
        "when": "resourceLangId == shellscript"
    },
    // nerdtree like binds
    // https://stackoverflow.com/questions/48203523/how-to-create-file-in-current-explorer-directory-in-vs-code-using-only-keys
    {
        "key": ", n t",
        "command": "workbench.files.action.showActiveFileInExplorer"
    },
    {
        "key": "enter",
        "command": "list.select",
        "when": "explorerViewletFocus && !inputFocus"
    },
    {
        "key": "m a",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus && !inputFocus"
    },
    {
        "key": "m f",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus && !inputFocus"
    },
    {
        "key": "m d",
        "command": "deleteFile",
        "when": "explorerViewletFocus && !inputFocus"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.nextEditor",
        "when": "explorerViewletFocus && !inputFocus"
    },
    {
        "key": ", n t",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "explorerViewletFocus && !inputFocus"
    }

]
